import java.util.Scanner;

public class ChooseAdventure {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.print("Welcome, new coder!  What is your name? ");
		String answer = getInput(scan);
		
		System.out.print("\nNice to meet you, " + answer + "!  Would you like to play a game? (\"yes\" or \"no\") ");
		answer = getInput(scan);
		
		
	}

	private static String getInput(Scanner scan) {
		String userInput = scan.next();
		
		return userInput;
	}
}
