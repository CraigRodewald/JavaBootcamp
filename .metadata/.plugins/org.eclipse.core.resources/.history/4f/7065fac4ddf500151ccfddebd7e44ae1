import java.util.Scanner;

public class ChooseAdventure {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		String quit = "n";
		int dragonHeads = 0;
		String weapon;
		
		System.out.print("Welcome, new coder!  What is your name? ");
		String name = getInput(scan);
		
		System.out.print("\nNice to meet you, " + name + "!  Would you like to play a game? (\"y\" or \"n\") ");
		String answer = getInput(scan);
		
		if (answer.equalsIgnoreCase("y")) {
			quit = "n";
		}
		else if (answer.equalsIgnoreCase("n")) {
			quit = "y";
		}
		
		while (quit.equalsIgnoreCase("n")) {
			System.out.println("Excellent!  You're walking home from Grand Circus and you encounter a fire-breathing dragon! ");
			System.out.print("What do you do? (enter '1' to face the beast or '2' to run away): ");
			answer = scan.next();
			
			if (answer.equals(1)) {
				System.out.println("\nYou apporach the deagon.  You see he has __ heads. (enter \"1\", \"2\", or \"3\")");
				dragonHeads = scan.nextInt();
			}
			else {
				System.out.println("You are a coward!");
				break;
			}
			
			System.out.println("\nNo one has ever faced a " + dragonHeads + "-headed dragon before!  Choose your weapon:");
			System.out.print("(enter '1' for a slingshot or '2' for a sword or '3' for a bow and arrow): ");
			int weaponNumber = scan.nextInt();
			
			switch (weaponNumber) {
			case 1:
				weapon = "slingshot";
				break;
				
			case 2:
				weapon = "sword";
				break;
				
			case 3:
				weapon = "bow and arrow";
				break;

			default:
				System.out.println("You are going in with your fists.  Not a great idea.");
				weapon = "dead";
				break;
			}
			
			
			
			System.out.println("/nArmed with your ");
		}
		
	}

	private static String getInput(Scanner scan) {
		String userInput = scan.next();
		
		return userInput;
	}
}
