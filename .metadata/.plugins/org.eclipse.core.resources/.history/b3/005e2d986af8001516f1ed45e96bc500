package com.gc.tdd;

public class EvenNumberGeneratorString {
	
	public String generateAndGetEvenNumbers(int i) {
		String result = "0";
		String evenNumber;
		
		if (i < 0 || i > 100) {
			throw new IllegalArgumentException();
		}
		
		for (int isEvenNumber = 0; isEvenNumber <= i; isEvenNumber++) {
			
			if (isEvenNumber%2 == 0) {
				evenNumber = String.valueOf(isEvenNumber);
				result = result + evenNumber;
			}
		
		}
		
		return result;
	}
}
