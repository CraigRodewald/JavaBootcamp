import java.util.Scanner;

public class PigLatinTranslator {
	public static void main(String[] args) {
		// Initialize variables and Scanner
		Scanner scan = new Scanner(System.in);
		String sentence;
		String prompt;
		
		// Title bar
		System.out.println("Welcome to the Pig Latin Translator!");
		
		prompt = "Enter a line to be translated: ";
		sentence = getInput(scan, prompt);
		
		translateSentence(sentence);
		
		
	}

	private static void translateSentence(String sentence) {
		String vowel = "way";
		String consonat = "ay";
		char firstLetter;
		Boolean startsWithVowel = false;
		char[] vowels = {'a', 'e', 'i', 'o', 'u'};
		
		firstLetter = sentence.charAt(0);
		
		for (char c : vowels) {
			if (firstLetter == c) {
				startsWithVowel = true;
			}
		}
		System.out.println(startsWithVowel);
		
	}

	private static String getInput(Scanner scan, String prompt) {
		String userInput;
		
		System.out.println(prompt);
		userInput = scan.nextLine();
		
		return userInput;
	}
}
