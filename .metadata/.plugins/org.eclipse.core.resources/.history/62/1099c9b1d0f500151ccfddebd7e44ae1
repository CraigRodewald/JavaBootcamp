import java.util.Scanner;

public class ChooseAdventure {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.print("Welcome, new coder!  What is your name? ");
		String userName = getInput(scan);
		
		System.out.println("Nice to meet you, " + userName + "!  Would you like to play a game?");
	}

	private static String getInput(Scanner scan) {
		String userInput = scan.next();
		
		return userInput;
	}
}
