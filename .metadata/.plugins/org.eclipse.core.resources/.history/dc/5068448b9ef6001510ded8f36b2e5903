import java.util.Scanner;

public class FactorialCalculator {
	public static void main(String[] args) {
		
		// Variables
		String repeat;
		Scanner scan = new Scanner(System.in);
		
		// Title bar
		System.out.println("Welcome to the Factorial Calculator!\n");
		
		do {
			long total =1;
			System.out.print("Enter an integer that's greater than 0 but less than 10: ");
			long number = scan.nextLong();
			
			for (int i = 1; i <= number; i++) {
				total*= i;
			}
			
			System.out.println("The facrtorial of " + number + "is " + total);
			System.out.print("\nWould you like to try agin? (y/n) ");
			repeat = scan.next();
		} while (repeat.equalsIgnoreCase("y"));
		
		scan.close();
	}
}
